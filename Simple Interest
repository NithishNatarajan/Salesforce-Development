Apex code for Simple Interest Calculation
---------------------------------------------------------------------------------------------------------------------------
public class Apexsi 
{
    public static void main()
    {
        integer P = 50000;
        integer R = 10;
        integer T = 5;
        integer Intrest;
        Intrest = (P*R*T)/100;
        system.debug('SIMPLE INTREST IS : ' +Intrest);
    }

}
---------------------------------------------------------------------------------------------------------------------------
# To Run the Code #
Apexsi.main();
