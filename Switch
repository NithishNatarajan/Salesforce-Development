public class Apexswitch { 
      public static void main()
    {
      
        String Cricket = 'Ipl';
        
        switch on Cricket
        {
            when 'Ipl'
            {
                system.debug('CSK is the Champions');
            }
            when 'Rohit'
            {
                system.debug('Mi is the Champions');
            }
            when else
            {
                system.debug('RCB worst uh!');
            }
        }
    }
    
}
