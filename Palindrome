Apex code for Palindrome
----------------------------------------------------------------------------------------------------------------------
public class palindrome()
{
    public static void main()
    {
        string name = 'AMMA';
        string reverse = name.reverse();
        
        if(name.equals(reverse))
        {
            system.debug('THE STRING IS PALINDROME :)');
        }
        else
        {
            system.debug('THE STRING IS NOT PALINDROME :(');
        }
        
    }

}
----------------------------------------------------------------------------------------------------------------------
# To Run the Code #
palindrome.main();
