Apex code for Vowel or Consonant
-------------------------------------------------------------------------------------------------------
public class vowel 
{
    public static void main()
    {
        string a = 'i';
        if(a == 'a' || a == 'e' || a == 'i' || a == 'o' || a == 'u')
        {
            system.debug('THE CHARACTER IS A VOWEL');
        }
        else
        {
            system.debug('THE CHARACTER IS CONSONANT');
        }
    }
        

}
-----------------------------------------------------------------------------------------------------------
# To Run the Code #
vowel.main();
